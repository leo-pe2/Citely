{
  "name": "Citely",
  "private": true,
  "version": "0.0.0",
  "description": "A desktop app for citing and annotating research PDFs with export.",
  "author": "Leonard Penzenstadler",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "dist:mac": "npm run transpile:electron && npm run build && npx electron-builder --mac --arm64",
    "dist:win": "npm run transpile:electron && npm run build && npx electron-builder --win --x64",
    "dist:linux": "npm run transpile:electron && npm run build && npx electron-builder --linux --x64"
  },
  "dependencies": {
    "@dnd-kit/core": "6.3.1",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tooltip": "1.2.8",
    "@react-pdf/renderer": "4.3.0",
    "@tanstack/react-table": "8.21.3",
    "better-sqlite3": "12.2.0",
    "class-variance-authority": "0.7.1",
    "electron-screenshots": "0.5.27",
    "electron-version": "2.0.1",
    "framer-motion": "12.23.12",
    "lucide-react": "0.544.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-pdf-highlighter": "8.0.0-rc.0",
    "uuid": "12.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@tailwindcss/postcss": "4.1.13",
    "@tailwindcss/vite": "4.1.13",
    "@types/node": "24.5.2",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "5.0.0",
    "autoprefixer": "10.4.21",
    "cross-env": "10.0.0",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "eslint": "9.33.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "16.3.0",
    "npm-run-all": "4.1.5",
    "pdfjs-dist": "4.10.38",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.13",
    "tw-animate-css": "1.3.8",
    "typescript": "5.8.3",
    "typescript-eslint": "8.39.1",
    "vite": "7.1.2"
  }
}
