{
    "appId": "com.leonard-penzenstadler.citely",
    "productName": "Citely",
    "files": [
      "dist-electron/**",
      "dist-react/**",
      "package.json"
    ],
    "extraResources": [
      "dist-electron/preload.cjs",
      "src/assets/**"
    ],
    "icon": "./DocIcon.png",
    "mac": {
      "target": "dmg",
      "icon": "./DocIcon.icns",
      "artifactName": "Citely-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "./DocIcon.png",
      "artifactName": "Citely-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "target": ["portable", "msi"],
      "icon": "./DocIcon.ico",
      "artifactName": "Citely-${version}-win-${arch}.${ext}"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false
}


